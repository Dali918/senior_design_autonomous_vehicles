<?xml version="1.0"?>

<robot name="robot" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="$(find gazebo_project)/urdf/common_properties.urdf.xacro" />

    <link name="base_link">
        <xacro:cuboid_inertia mass="1.0" x="0.1" y="0.1" z="0.1" />
    </link>

    <!-- 
        SOLUTION START
    -->

    <!-- base joint-->
    <joint name="joint_base_link_chassis" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <child link="link_chassis" />
        <parent link="base_link" />
    </joint>

    <!-- left wheel joint-->
    <joint name="left_wheel_joint" type="revolute">
        <origin xyz="-0.25 0 0" rpy="0 ${pi/2} 0" />
        <parent link="link_chassis" />
        <child link="left_wheel" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit lower="-1.79769e+308" upper="1.79769e+308" effort="100000" velocity="1000" />
    </joint>
    
    <!-- right wheel joint-->
    <joint name="right_wheel_joint" type="revolute">
        <origin xyz="0.25 0 0" rpy="0 ${pi/2} 0" />
        <parent link="link_chassis" />
        <child link="right_wheel" />
        <axis rpy="0 0 0" xyz="0 0 1" />
        <limit lower="-1.79769e+308" upper="1.79769e+308" effort="100000" velocity="1000" />
    </joint>

    <!-- front wheel joint-->
    <joint name="front_wheel_joint" type="fixed">
        <origin xyz="0 0.25 0" rpy="0 ${pi/2} 0" />
        <parent link="link_chassis" />
        <child link="front_wheel" />
    </joint>

    <!-- back wheel joint-->
    <joint name="back_wheel_joint" type="fixed">
        <origin xyz="0 -0.25 0" rpy="0 ${pi/2} 0" />
        <parent link="link_chassis" />
        <child link="back_wheel" />
    </joint>

    <!-- LINKS -->

    <link name="link_chassis">
        <visual name="chassis_visual">
            <origin rpy="0 0 0" xyz="0 0 0.1" />
           <geometry>
                <box size="0.5 0.5 0.1" />
            </geometry>
            <material name="white">
                <lighting>true</lighting>
                <cast_shadows>true</cast_shadows>
                <receive_shadows>true</receive_shadows>
                <color rgba="0.9 0.9 0.9 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.625" rpy="0 0 0" />
            <geometry>
                <box size="2.4 1.0 1.0" />
            </geometry>
        </collision>
        <xacro:inertial_cuboid_with_pose mass="500.0" x="2.4" y="1.0" z="1.0">
            <origin xyz="0 0 0.625" rpy="0 0 0" />
        </xacro:inertial_cuboid_with_pose>
    </link>


    <!-- left wheel link -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.05" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>

    <!-- right wheel link -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.05" />
            </geometry>
            <material name="orange" />
        </visual>
    </link>

    <!-- front wheel link -->
    <link name="front_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.04" />
            </geometry>
            
            <material name="black">
                <color rgba="0.1 0.1 0.1 1" />
            </material>
        </visual>
    </link>

    <!-- back wheel link -->
    <link name="back_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.04" />
            </geometry>

            <material name="black">
                <color rgba="0.1 0.1 0.1 1" />
            </material>

        </visual>
    </link>

    <!-- joint state publisher-->
    <gazebo>
        <plugin filename="ignition-gazebo-joint-state-publisher-system"
                name="ignition::gazebo::systems::JointStatePublisher" />
    </gazebo>

    <!-- 
        SOLUTION END
    -->


    <!-- Differential Drive Plugin -->
    
    <gazebo>
        <plugin
            filename="gz-sim-diff-drive-system"
            name="gz::sim::systems::DiffDrive">
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            <wheel_separation>0.60</wheel_separation>
            <wheel_radius>0.05</wheel_radius>
            <odom_publish_frequency>1</odom_publish_frequency>
            <topic>cmd_vel</topic>
        </plugin>
    </gazebo>


</robot>